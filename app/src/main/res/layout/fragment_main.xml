<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMainUI">



    <!-- TODO: Update blank fragment layout -->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/NotLoginInfo"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="#ccc"
            android:orientation="vertical">

            <TextView
                android:id="@+id/MainUserName"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:background="#ccc"
                android:text="로그인이 필요해요"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/MainUserCar"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:background="#ccc"
                android:gravity="right|bottom"
                android:text=">>>로그인 하여 차량등록"

                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/ConsumableText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="소모품 추적"></TextView>

        <LinearLayout
            android:id="@+id/ConsumableLinear"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="#ccc"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/tire" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="13dp"
                                android:text="타이어" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <ProgressBar
                                android:id="@+id/TireProgress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:max="100000"
                                android:progressBackgroundTint="@color/white"
                                android:progressTint="#ff9494"
                                android:scaleY="5" />

                            <Button
                                android:id="@+id/TireBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:backgroundTint="#fff"
                                android:text="입력"
                                android:textColor="#000" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/brakepad" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="13dp"
                                android:text="브레이크패드" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <ProgressBar
                                android:id="@+id/BrakeProgress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:max="100000"
                                android:progressBackgroundTint="@color/white"
                                android:progressTint="#80edce"
                                android:scaleY="5" />

                            <Button
                                android:id="@+id/BrakeBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:backgroundTint="#fff"
                                android:text="입력"
                                android:textColor="#000" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/wiper" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="13dp"
                                android:text="와이퍼" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <ProgressBar
                                android:id="@+id/WiperProgress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:max="100000"
                                android:progressBackgroundTint="@color/white"
                                android:progressTint="#ffc900"
                                android:scaleY="5" />

                            <Button
                                android:id="@+id/WiperBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:backgroundTint="#fff"
                                android:text="입력"
                                android:textColor="#000" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/engineoil" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="13dp"
                                android:text="엔진오일" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <ProgressBar
                                android:id="@+id/EngineProgress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:max="100000"
                                android:progressBackgroundTint="@color/white"
                                android:progressTint="#ff9494"
                                android:scaleY="5" />

                            <Button
                                android:id="@+id/EngineBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:backgroundTint="#fff"
                                android:text="입력"
                                android:textColor="#000" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/airfilter" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="13dp"
                                android:text="에어컨필터" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <ProgressBar
                                android:id="@+id/AirFilterProgres"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:max="100000"
                                android:progressBackgroundTint="@color/white"
                                android:progressTint="#80edce"
                                android:scaleY="5" />

                            <Button
                                android:id="@+id/AirFilterBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:backgroundTint="#fff"
                                android:text="입력"
                                android:textColor="#000" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/accumulator" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="13dp"
                                android:text="배터리" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <ProgressBar
                                android:id="@+id/BatteryProgress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:max="100000"
                                android:progressBackgroundTint="@color/white"
                                android:progressTint="#ff9494"
                                android:scaleY="5" />

                            <Button
                                android:id="@+id/BatteryBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:backgroundTint="#fff"
                                android:text="입력"
                                android:textColor="#000" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <TextView
            android:id="@+id/NearSiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="근처 장소" />

        <LinearLayout
            android:id="@+id/NearSiteLinear"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:background="#ccc"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="120dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/GasStation"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/gaspump" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_weight="1"
                    android:text="주유소" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/CarCenter"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/carrepair" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_weight="1"
                    android:text="정비소" />

            </LinearLayout>

            </LinearLayout>


        </LinearLayout>



</FrameLayout>